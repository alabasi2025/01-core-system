# ===========================================
# Environment Variables Template
# Copy this file to .env and fill in the values
# ===========================================

# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
# Secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
# Access token expiration time
JWT_EXPIRES_IN="15m"
# Secret key for refresh tokens
JWT_REFRESH_SECRET="your-refresh-token-secret-key-change-in-production"
# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN="7d"

# API Configuration
# Port for the NestJS API server
API_PORT=3001
# API route prefix
API_PREFIX="api/v1"

# Web Configuration
# Port for the Angular web application
WEB_PORT=4200

# Environment
# Options: development, staging, production
NODE_ENV="development"

# Rate Limiting (optional)
# Maximum requests per minute
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging (optional)
# Options: debug, info, warn, error
LOG_LEVEL="info"

# CORS (optional)
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS="http://localhost:4200,http://localhost:4201"
